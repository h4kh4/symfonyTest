{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminUsersController!{% endblock %}

{% block body %}

<div class="container mt-3">
    <div class="row">
        <div class="col">
        
        <div class="card border-success">
            <div class="card-header">FAQ - Supprimer un utilisateur</div>
            <div class="card-body pt-0 ">
                <p class="card-text mt-3">Pour supprimer un utilisateur, il faut d'abord supprimer ses <a href="{{ path ('admin_ads_index')}}">annonces</a>
                et ses <a href="{{path('admin_comment_index')}}">commentaires</a></p>
            </div>
        </div>
<div class="row  mt-0 pt-0">
          <div class="col">
        {% set page = pagination.page %}
        {% set pages = pagination.pages %}
                <ul class="pagination pagination mt-3  d-flex justify-content-center">
                <li class="page-item {% if page == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{ path('admin_users_index', {'page': page -1 }) }}">&laquo;</a>
                </li>

        {% for i in 1..pages %}
                <li class="page-item {% if page == i %}active{% endif %} ">
                <a class="page-link" href="{{ path('admin_users_index', {'page' : i }) }}">{{ i }}</a>
                </li>
        {% endfor %}

                <li class="page-item {% if page == pages %}disabled{% endif %}">
                <a class="page-link" href="{{ path('admin_users_index', {'page': page +1 }) }}">&raquo;</a>
                </li>
                </ul>

        </div>
</div>

        <br>


            <table class="table table-hover">
                <thead class="mb-1">
                    <th>Id</th>
                    <th>Picture</th>
                    <th>Utilisateur</th>
                    <th>Email</th>
                    <th class="text-center align-middle">Action</th>
                </thead>
 
                <tbody>
            
                      {% for user in pagination.data  %}
                                
                <tr>
        <td>{{user.id}}</td>
        <td><img src="{{user.picture}}" alt="pictur"></td>
        <td>{{user.firstName}}{{user.lastName}}</td>
        <td>{{user.email}}</td>
        <td class="text-center align-middle"><a href= "" 
        class="btn btn-primary mr-1"><i class="fas fa-edit"></i></a></td>
       <td class="text-center align-middle"><a href="{{ path ('admin_users_delete' , {'id': user.id }) }}"  
        class="btn btn-danger"><i class="fas fa-trash-alt"></i></a></td> 
                </tr>
                </tbody>
               {% endfor %}
            </table>
        </div>
    </div>
</div>

{% endblock %}
