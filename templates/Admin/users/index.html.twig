{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminUsersController!{% endblock %}

{% block body %}

<div class="container mt-3">
    <div class="row">
        <div class="col">
        
        <div class="card border-success mb-3">
            <div class="card-header">FAQ - Supprimer un utilisateur</div>
            <div class="card-body">
                <p class="card-text">Pour supprimer un utilisateur, il faut d'abord supprimer ses <a href="{{ path ('admin_ads_index')}}">annonces</a>
                et ses <a href="{{path('admin_comment_index')}}">commentaires</a></p>
            </div>
        </div>


            <table class="table table-hover">
                <thead>
                    <th>Id</th>
                    <th>Picture</th>
                    <th>Utilisateur</th>
                    <th>Email</th>
                    <th>Action</th>
                </thead>
                <tbody>
                      {% for user in users %}
                <tr>
        <td>{{user.id}}</td>
        <td><img src="{{user.picture}}" alt="pictur"></td>
        <td>{{user.firstName}}{{user.lastName}}</td>
        <td>{{user.email}}</td>
        <td class="text-center align-middle"><a href= "" 
        class="btn btn-primary mr-1"><i class="fas fa-edit"></i></a></td>
       <td class="text-center align-middle"><a href="{{ path ('admin_users_delete' , {'id': user.id }) }}"  
        class="btn btn-danger"><i class="fas fa-trash-alt"></i></a></td> 
                </tr>
                </tbody>
               {% endfor %}
            </table>
        </div>
    </div>
</div>

{% endblock %}
