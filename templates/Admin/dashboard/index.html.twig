  {% extends 'admin/base.html.twig' %}

  {% block title %}Tableau de bord{% endblock %}

  {% block body %}

  <div class="container-fluid mt-5">
      <div class="row">
          <div class="col">
              <div class="card bg-primary text-white mb-3 text-center">
                  <div class="card-body">
                      <div class="row">
                          <div class="col-4">
                              <i class="fas fa-users fa-3x"></i>
                          </div>
                          <div class="col-8">
                              <h4 class="card-title">{{ stats.users }} utilisateurs</h4>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col">
              <div class="card text-white bg-dark mb-3 text-center">
                  <div class="card-body">
                      <div class="row">
                          <div class="col-4">
                              <i class="fas fa-hotel fa-3x"></i>
                          </div>
                          <div class="col-8">
                              <h4 class="card-title">{{ stats.ads }} Tracks</h4>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col">
              <div class="card text-white bg-warning mb-3 text-center">
                  <div class="card-body">
                      <div class="row">
                          <div class="col-4">
                              <i class="fas fa-folder fa-3x"></i>
                          </div>
                          <div class="col-8">
                              <h4 class="card-title">achats</h4>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
          <div class="col">
              <div class="card text-white bg-success mb-3 text-center">
                  <div class="card-body">
                      <div class="row">
                          <div class="col-4">
                              <i class="fas fa-comments fa-3x"></i>
                          </div>
                          <div class="col-8">
                              <h4 class="card-title"> {{ stats.comments }} avis </h4>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
      <hr>
      <div class="row">
          <div class="col">
              <div class="alert alert-success my-2">
                  <h2 class="alert-heading my-2"><i class="fas fa-arrow-up"></i> Tracks populaires</h2>

                  <table class="table table-hover">
                      <thead>
                   
                          <tr>
                              <th>Track</th>
                              <th>Auteur</th>
                              <th>Moyenne</th>
                          </tr>
                 
                      </thead>
                      <tbody>
             {% for ad in bestTracks %}
                          <tr>
                              <td>{{ ad.title }}</td>
                              <td>{{ad.firstName}} {{ad.lastName}}</td>
                              <td class="text-center">
                                  <span class="badge badge-dark">
                                    {{ad.note | number_format(1,","," ")}}
                                  </span>
                              </td>
              {% endfor %}
                          </tr>

                      </tbody>
                  </table>
              </div>
          </div>
                    <div class="col">
              <div class="alert alert-danger my-2" style="padding-bottom: 21.5px">
                  <h2 class="alert-heading my-2"><i class="fas fa-arrow-up"></i> Tracks impopulaires</h2>

                  <table class="table table-hover">
                      <thead>
                   
                          <tr>
                              <th>Track</th>
                              <th>Auteur</th>
                              <th>Moyenne</th>
                          </tr>
                 
                      </thead>
                      <tbody>
             {% for ad in worstTracks %}
                          <tr>
                              <td>{{ ad.title }}</td>
                              <td>{{ad.firstName}} {{ad.lastName}}</td>
                              <td class="text-center">
                                  <span class="badge badge-dark">
                                    {{ad.note | number_format(1,","," ")}}
                                  </span>
                              </td>
              {% endfor %}
                          </tr>

                      </tbody>
                  </table>
              </div>
          </div>
      
      </div>
  </div>
  <br><br>

  {% endblock %}
