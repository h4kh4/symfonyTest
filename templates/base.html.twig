<!DOCTYPE html>
<html>

<head>
	<meta charset="UTF-8">
	<title>H4KH4 - {% block title %}Welcome!{% endblock %}</title>

	<link rel="stylesheet" href="/CSS/boostrap.min.css">
	<link rel="stylesheet" href="/CSS/app.css">


	{% block stylesheets %}{% endblock %}

</head>

<body>

	{#========== NAVBAR ===========#}
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark pt-3">
		<a class="navbar-brand" href=" {{ path('homepage') }}">H4KH4</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02"
			aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarColor02">
			<ul class="navbar-nav mr-auto">
				<li class="nav-item">
					<a class="nav-link" href=" {{ path('homepage')}}">Accueil</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href=" {{ path('ad')}}">Tracklist</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href=" {{ path('fan')}}">Fan Zone</a>
				</li>
			</ul>
			<ul class="navbar-nav ml-auto">
				{% if app.user %}

			
				{#========== Menu déroulant utilisateur connecté ===========#}
				<li class="nav-item dropdown">
					<a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" id="accountDropdownLink">
						<img src="{{app.user.picture}}" class="rounded-circle2 mr-1"
							alt="Avatar de {{app.user.firstName}}"> {{app.user.firstName}} {{app.user.lastName}}
					</a>

					<div class="dropdown-menu dropdown-menu-right" aria-labelledby="accountDopdownLink">
						<a href="{{ path('tr-create')}}" class="dropdown-item">Créer une annonce</a>
						<div class="dropdown-divider"></div>
						<a href="{{ path('account_index') }}" class="dropdown-item">Mon compte</a>

						<a href="{{ path('account_profile') }}" class="dropdown-item">Modifier mon profil</a>
						<div class="dropdown-divider"></div>
						<a href="{{ path('account_logout') }}" class="dropdown-item">Déconnexion</a>
					</div>
				</li>

				{#========== EO ===========#}
				{% else %}
				<li class="nav-item">
					<a href=" {{ path('account_login')}} " class="nav-link">Mon compte</a>
				</li>

				<li class="nav-item">
					<a href="{{ path ('account_register')}}" class="nav-link">Inscription</a>
				</li>

				{% endif %}

			</ul>
		</div>
	</nav>

	{#========== Message d'alertes ===========#}

	{% for label, messages in app.flashes %}
	<div class="container mt-4">
		<div class="alert alert-{{ label }}">
			{% for message in messages %}
			<p> {{ message | raw }}</p>
			{% endfor %}
		</div>
	</div>
	{% endfor %}
	{#========== EO Message d'alertes ===========#}

	{% block body %}{% endblock %}

	<!-- Footer -->

	<script src="/JS/jquery.min.js"></script>
	<script src="/JS/popper.min.js"></script>
	<script src="/JS/boostrap.min.js"></script>

	{% block javascripts %}</script>{% endblock %}
</body>

</html>
